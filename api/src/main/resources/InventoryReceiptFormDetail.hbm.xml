<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.hospitalrestcore.inventory">

    <class name="InventoryReceiptFormDetail"
           table="inventory_receipt_form_detail" batch-size="500">

        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native" />
        </id>
        <many-to-one name="drug"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryDrug"
                     column="drug_id" cascade="none" lazy="false" />
        <many-to-one name="formulation"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryDrugFormulation"
                     column="formulation_id" cascade="none" lazy="false" />
        <property name="quantity" column="quantity" />
        <property name="rate" column="rate" />
        <property name="vat" column="vat" />
        <property name="mrPrice" column="mr_price" />
        <property name="companyName" column="company_name" />
        <property name="batchNo" column="batch_no" />
        <property name="waiverPercentage" column="discount" />
        <property name="cgst" column="cgst" />
        <property name="sgst" column="sgst" />
        <property name="dateExpiry" column="date_expiry" />
        <property name="dateManufacture" column="date_manufacture" />
        <property name="receiptDate" column="receipt_date" />
        <property name="unitPrice" column="unit_price" />
        <property name="totalAmount" column="total_amount" />
        <property name="amountAfterGST" column="amount_after_gst" />
        <property name="deleted" column="deleted" />

    </class>
</hibernate-mapping>