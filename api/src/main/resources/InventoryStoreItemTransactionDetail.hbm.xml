<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.hospitalrestcore.inventory">

	<class name="InventoryStoreItemTransactionDetail" table="inventory_store_item_transaction_detail" batch-size="500">

		<id name="id" type="int" column="id" unsaved-value="0">
				<generator class="native" />
		</id>
		
		<many-to-one name="transaction" class="org.openmrs.module.hospitalrestcore.inventory.InventoryStoreItemTransaction"
	        column="transaction_id" cascade="none" lazy="false" />
	    <many-to-one name="item" class="org.openmrs.module.hospitalrestcore.inventory.InventoryItem"
	        column="item_id" cascade="none" lazy="false" />
	    <many-to-one name="specification" class="org.openmrs.module.hospitalrestcore.inventory.InventoryItemSpecification"
	        column="specification_id" cascade="none" lazy="false" />    
	    <property name="quantity" column="quantity"  />
		<property name="currentQuantity" column="current_quantity" />
		<property name="issueQuantity" column="issue_quantity" />
		
		<property name="unitPrice" column="unit_price" />
		<property name="VAT" column="VAT" />
		<property name="totalPrice" column="total_price" />
		
		<property name="companyName" column="company_name" />
		<property name="dateManufacture" column="date_manufacture" />
		<property name="receiptDate" column="receipt_date" />
		
		<property name="openingBalance" column="opening_balance"  />
		<property name="closingBalance" column="closing_balance"  />
		
		<many-to-one name="parent" class="org.openmrs.module.hospitalrestcore.inventory.InventoryStoreItemTransactionDetail"
	        column="parent_id"  lazy="false" />	 
	    <set name="subDetails"  table="inventory_store_item_transaction_detail" cascade="save-update,merge,evict" >
	      <key column="parent_id"/>
	      <one-to-many class="org.openmrs.module.hospitalrestcore.inventory.InventoryStoreItemTransactionDetail"/>
	    </set> 
	    
	    <property name="createdDate" column="created_date"  />
	    <many-to-one name="createdBy" column="created_by"  class="org.openmrs.User" foreign-key="inventory_drug_unit_created_by_fk"/>
	     <property name="deleted" column="deleted" />
	     <property name="deletedDate" column="deleted_date"  />
	    <many-to-one name="deletedBy" column="deleted_by"  class="org.openmrs.User" foreign-key="inventory_drug_unit_deleted_by_fk"/>
		<property name="lastModifiedDate" column="last_modified_date"  />
	    <many-to-one name="lastModifiedBy" column="last_modified_by"  class="org.openmrs.User" foreign-key="inventory_drug_unit_lastmodified_by_fk"/>
		<property name="retired" column="retired"  />
		<property name="retiredDate" column="retired_date"  />
		<many-to-one name="retiredBy" column="retired_by"  class="org.openmrs.User" foreign-key="inventory_drug_unit_retired_by_fk"/>
		<property name="uuid" type="java.lang.String" column="uuid"
			length="38" unique="true" />
			
	</class>
</hibernate-mapping>
