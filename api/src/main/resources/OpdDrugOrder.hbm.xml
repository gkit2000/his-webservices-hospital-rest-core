<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping
        package="org.openmrs.module.hospitalrestcore.inventory">

    <class name="OpdDrugOrder"
           table="opd_drug_order" batch-size="500">

        <id name="opdDrugOrderId" type="int" column="opd_drug_order_id" unsaved-value="0">
            <generator class="native" />
        </id>

        <many-to-one name="patient"
                class="org.openmrs.Patient"
                column="patient_id" cascade="none" lazy="false" />
        <many-to-one name="encounter"
                class="org.openmrs.Encounter"
                column="encounter_id" cascade="none" lazy="false" />
        <property name="createdDate" column="created_on"  />
        <many-to-one name="createdBy" column="created_by"  class="org.openmrs.User" foreign-key="opd_drug_order_created_by_fk"/>
        <property name="orderStatus" column="order_status" />
        <property name="cancelStatus" column="cancel_status" />
        <property name="orderFrom" column="order_from" />
        <property name="referralWardName" column="referral_opd_name" />

    </class>
</hibernate-mapping>