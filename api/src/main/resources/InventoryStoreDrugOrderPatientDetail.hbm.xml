<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping
        package="org.openmrs.module.hospitalrestcore.inventory">

    <class name="InventoryStoreDrugOrderPatientDetail"
           table="inventory_store_drug_order_patient_detail" batch-size="500">
        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native" />
        </id>

        <many-to-one name="drugOrderPatient"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryStoreDrugOrderPatient"
                     column="drug_order_patient_id" cascade="none" lazy="false" />
        <property name="orderDate" column="order_date" />
        <many-to-one name="opdDrugOrder"
                     class="org.openmrs.module.hospitalrestcore.inventory.OpdDrugOrder"
                     column="opd_drug_order_id" cascade="none" lazy="false" />
        <property name="createdDate" column="created_on"  />
        <many-to-one name="createdBy" column="created_by"  class="org.openmrs.User" foreign-key="inventory_store_drug_order_patient_detail_created_by_fk"/>

    </class>
</hibernate-mapping>