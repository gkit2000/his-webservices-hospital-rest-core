<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.hospitalrestcore.inventory">

    <class name="InventoryStoreDrugIndentDetail"
           table="inventory_store_drug_indent_detail" batch-size="500">

        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native" />
        </id>
        <many-to-one name="indent"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryStoreDrugIndent"
                     column="indent_id" cascade="none" lazy="false" />
        <many-to-one name="drug"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryDrug"
                     column="drug_id" cascade="none" lazy="false" />
        <many-to-one name="formulation"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryDrugFormulation"
                     column="formulation_id" cascade="none" lazy="false" />
        <property name="quantity" column="quantity" />
        <property name="mainStoreTransfer" column="main_store_transfer" />
        <property name="createdDate" column="created_on" />
        <property name="deleted" column="deleted" />

    </class>
</hibernate-mapping>