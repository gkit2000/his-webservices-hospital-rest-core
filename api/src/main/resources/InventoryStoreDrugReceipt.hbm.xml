<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping
        package="org.openmrs.module.hospitalrestcore.inventory">

    <class name="InventoryStoreDrugReceipt"
           table="inventory_store_drug_receipt" batch-size="500">
        <id name="id" type="int" column="id" unsaved-value="0">
            <generator class="native" />
        </id>

        <many-to-one name="transaction"
                     class="org.openmrs.module.hospitalrestcore.inventory.InventoryStoreDrugTransaction"
                     column="transaction_id" cascade="none" lazy="false" />
        <property name="vendorName" column="vendor_name" />
        <property name="receiptNumber" column="receipt_number" />
        <property name="billAmount" column="bill_amount" />
        <property name="createdDate" column="created_on" />
        <many-to-one name="createdBy" column="created_by"
                     class="org.openmrs.User"
                     foreign-key="inventory_store_drug_receipt_created_by_fk" />
        <property name="uuid" type="java.lang.String" column="uuid"
                  length="38" unique="true" />
    </class>
</hibernate-mapping>